---
import '../styles/global.css';
import Header from '../components/Header.astro';

interface Props {
  title?: string;
}

const { title = 'Lina â€” Portfolio' } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script>
      if (["localhost", "127.0.0.1"].includes(location.hostname)) {
        const s = document.createElement("script");
        s.src = "https://unpkg.com/flare-dev/dist/flare.js";
        document.head.appendChild(s);
      }
    </script>
  </head>
  <body class="bg-white text-neutral-900 min-h-screen font-mono">
    <Header />
    <slot />
    <footer class="border-t border-neutral-200 mt-20">
      <div class="px-12 h-14 flex items-center justify-center">
        <p class="text-xs text-neutral-500">Lina 2026</p>
      </div>
    </footer>
  </body>
</html>
