---
import ProjectIllustration from './ProjectIllustration.astro';

interface Props {
  slug: string;
  title: string;
  description: string;
  tags?: string[];
  href: string;
  year?: string;
}

const { slug, title, description, tags = [], href, year } = Astro.props;
const isExternal = href.startsWith('http');
---

<a
  href={href}
  target={isExternal ? '_blank' : undefined}
  rel={isExternal ? 'noopener noreferrer' : undefined}
  class="group block border border-neutral-200 hover:border-neutral-400 transition-all duration-200 overflow-hidden"
>
  <!-- Illustration -->
  <div class="h-24 bg-neutral-900 border-b border-neutral-700 group-hover:border-neutral-600 transition-colors overflow-hidden">
    <ProjectIllustration slug={slug} />
  </div>

  <!-- Content -->
  <div class="p-4">
    <div class="flex items-start justify-between gap-4 mb-3">
      <h2 class="text-neutral-900 font-semibold text-lg group-hover:text-black transition-colors">
        {title}
      </h2>
      {year && <span class="text-neutral-700 text-sm shrink-0">{year}</span>}
    </div>

    <p class="text-neutral-700 text-sm leading-relaxed mb-4">{description}</p>

    {tags.length > 0 && (
      <div class="flex flex-wrap gap-2">
        {tags.map((tag) => (
          <span class="text-xs text-neutral-700 border border-neutral-200 px-2 py-0.5">
            {tag}
          </span>
        ))}
      </div>
    )}
  </div>
</a>
