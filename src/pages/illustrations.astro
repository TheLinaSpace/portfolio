---
import Layout from '../layouts/Layout.astro';
import { illustrations } from '../data/illustrations';
---

<Layout title="Illustrations - Lina">
  <main class="max-w-5xl mx-auto px-6 py-14">

    <!-- Header -->
    <header class="mb-8">
      <h1 class="text-2xl font-semibold text-neutral-900 mb-2">Illustrations</h1>
      <p class="text-neutral-700 text-sm">A collection of illustrations.</p>
    </header>

    <!-- Cards -->
    <div class="grid grid-cols-2 gap-5">
        {illustrations.map((item) => (
          <a
            href={`/illustrations/${item.slug}`}
            class="group relative block"
          >
            <img
              src="/Skills Default.png"
              alt={item.title}
              class="w-full group-hover:opacity-0 transition-opacity duration-200"
            />
            <img
              src="/Skills Hover.png"
              alt={item.title}
              class="w-full absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-200"
            />
            <!-- Text overlay -->
            <div class="absolute bottom-0 left-0 w-full h-[40%] max-w-[75%] flex flex-col gap-2 items-start justify-center pl-6">
              <h3 class="text-sm font-semibold text-neutral-900">{item.title}</h3>
              <p class="text-[13px] text-neutral-700">{item.description}</p>
            </div>
          </a>
        ))}
    </div>
  </main>
</Layout>
