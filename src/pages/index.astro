---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { projects } from '../data/projects';
---

<Layout>
  <main class="max-w-5xl mx-auto px-6 py-20">

    <!-- Header -->
    <header class="mb-16">
      <h1 class="text-2xl font-semibold text-neutral-900 mb-2">Lina Charara</h1>
      <p class="text-neutral-600 text-sm">Product designer at Tesla. Building products that solve user problems.</p>
    </header>

    <!-- Two-column layout -->
    <div class="flex gap-12 items-start">

      <!-- Image (sticky) -->
      <div class="w-1/2 sticky top-20 shrink-0">
        <img
          src="/header-lina.webp"
          alt="Lina"
          class="w-full object-cover"
        />
      </div>

      <!-- Project cards -->
      <div class="w-1/2">
        <div class="flex flex-col gap-4">
          {projects.map((project) => (
            <ProjectCard
              slug={project.slug}
              title={project.title}
              description={project.description}
              tags={project.tags}
              href={`/projects/${project.slug}`}
              year={project.year}
            />
          ))}
        </div>
      </div>

    </div>
  </main>
</Layout>
