---
import Layout from '../layouts/Layout.astro';
import { projects } from '../data/projects';
---

<Layout>
  <main class="max-w-5xl mx-auto px-6 py-14">

    <!-- Header -->
    <header class="mb-8">
      <h1 class="text-2xl font-semibold text-neutral-900 mb-2">Lina Charara</h1>
      <p class="text-neutral-700 text-sm">Product designer at Tesla. Building products that solve user problems.</p>
    </header>

    <!-- Two columns -->
    <div class="flex gap-12 items-start">

      <!-- Left: image (sticky) -->
      <div class="w-1/2 shrink-0 sticky top-20">
        <img
          src="/Home image.png"
          alt="Lina"
          class="w-full"
        />
      </div>

      <!-- Right: project images -->
      <div class="w-1/2 flex flex-col gap-5">
        {projects.map((project) => (
          <a
            href={`/projects/${project.slug}`}
            class="group relative block"
          >
            <img
              src="/Skills Default.png"
              alt={project.title}
              class="w-full group-hover:opacity-0 transition-opacity duration-200"
            />
            <img
              src="/Skills Hover.png"
              alt={project.title}
              class="w-full absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-200"
            />
            <!-- Text overlay -->
            <div class="absolute bottom-0 left-0 right-0 px-5 py-4">
              <h3 class="text-sm font-semibold text-neutral-900 mb-2 pl-4">{project.title}</h3>
              <p class="text-[13px] text-neutral-700 ml-4 pb-8 w-[300px]">{project.description}</p>
            </div>
          </a>
        ))}
      </div>

    </div>
  </main>
</Layout>
